<Window x:Class="MoneyLover.UI.Views.PassbookList"      
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyLover.UI"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextElement.FontFamily="Arial"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="#EEEEEE"
        Height="580.191" Width="800"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="PassbookList">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <materialDesign:Card>
            <StackPanel Margin="15">
                <Button x:Name="btnBack" HorizontalAlignment="Left" Height="30" TextElement.Foreground="Black"
                    Content="{materialDesign:PackIcon Kind=ArrowLeft}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="Trở về" />
                <Button x:Name="btnAddPassBook" HorizontalAlignment="Right" Height="30" TextElement.Foreground="Black"
                    Content="{materialDesign:PackIcon Kind=PlusCircleOutline}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="Thêm sổ tiết kiệm" />
                <TextBlock
                        Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                        Margin="0"
                        HorizontalAlignment="Center"
                        FontSize="28">
                        SỔ TIẾT KIỆM
                </TextBlock>

                <Viewbox
                        Height="10">
                </Viewbox>

                <TextBlock
                        Style="{StaticResource MaterialDesignBody1TextBlock}"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Center">
                      Tổng tiền: 130.000.000 (5 sổ)
                </TextBlock>
            </StackPanel>
        </materialDesign:Card>
        <Grid Grid.Row="1">
            <materialDesign:Card>
                <StackPanel Margin="15">
                    <GroupBox
                      Header="Bank Name"
                      Style="{DynamicResource MaterialDesignGroupBox}"
                      Margin="16"
                      materialDesign:ColorZoneAssist.Mode="PrimaryDark">
                        <Grid>
                            <DataGrid 
                                x:Name="dtgridListPassBook"
                                AutoGenerateColumns="False"
                                IsReadOnly="True">          
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding PassBookID}"        
                                                        Header="Mã số"
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Binding="{Binding Deposit}"        
                                                        Header="Tổng số tiền gốc"
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Binding="{Binding Term}"
                                                        Header="Kỳ hạn gửi"
                                                        IsReadOnly="True" />
                                    <DataGridTextColumn Binding="{Binding InterestRates}"        
                                                        Header="Lãi suất năm"
                                                        IsReadOnly="True" />
                                    <DataGridTextColumn Binding="{Binding SentDate, StringFormat=dd-MM-yyyy}"        
                                                        Header="Ngày mở"
                                                        IsReadOnly="True" />
                                    <DataGridTextColumn Header="Chỉnh sửa" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                    <GroupBox
                      Header="Đã tất toán"
                      Style="{DynamicResource MaterialDesignGroupBox}"
                      Margin="16"
                      materialDesign:ColorZoneAssist.Mode="PrimaryDark">
                        <Grid>
                            <DataGrid
                                x:Name="dtgridSettlement"
                                AutoGenerateColumns="False"
                                IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding PassBookID}"        
                                                        Header="Mã số"
                                                        IsReadOnly="True" />
                                    <DataGridTextColumn Binding="{Binding Deposit}"        
                                                        Header="Tổng số tiền gốc"
                                                        IsReadOnly="True" />
                                    <DataGridTextColumn Binding="{Binding Term}"
                                                        Header="Kỳ hạn gửi"
                                                        IsReadOnly="True" />
                                    <DataGridTextColumn Binding="{Binding InterestRates}"        
                                                        Header="Lãi suất năm"
                                                        IsReadOnly="True" />
                                    <DataGridTextColumn Binding="{Binding SentDate, StringFormat=dd-MM-yyyy}"        
                                                        Header="Ngày mở"
                                                        IsReadOnly="True" />
                                    <DataGridTemplateColumn Header="Xem"
                                                        IsReadOnly="True" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button x:Name="btnViewSettlement" Content=". . ."/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window>
