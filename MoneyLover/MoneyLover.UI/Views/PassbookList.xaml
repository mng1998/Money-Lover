<Window x:Class="MoneyLover.UI.Views.PassbookList"      
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyLover.UI"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextElement.FontFamily="Arial"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="#EEEEEE"
        Height="auto" Width="auto"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="PassbookList">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <materialDesign:Card>
            <StackPanel Margin="15">
                <Button x:Name="btnBack" HorizontalAlignment="Right" Height="30" TextElement.Foreground="Black"
                    Content="{materialDesign:PackIcon Kind=PlusCircleOutline}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="Trở về" />
                <TextBlock
                        Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                        Margin="0"
                        HorizontalAlignment="Center"
                        FontSize="28">
                        SỔ TIẾT KIỆM
                </TextBlock>

                <Viewbox
                        Height="10">
                </Viewbox>

                <TextBlock
                        Style="{StaticResource MaterialDesignBody1TextBlock}"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Center">
                      Tổng tiền: 130.000.000 (5 sổ)
                </TextBlock>
            </StackPanel>
        </materialDesign:Card>
        <Grid Grid.Row="1">
            <materialDesign:Card>
                <StackPanel Margin="15">
                    <GroupBox
                      Header="Bank Name"
                      Style="{DynamicResource MaterialDesignGroupBox}"
                      Margin="16"
                      materialDesign:ColorZoneAssist.Mode="PrimaryDark">
                        <ListView  ItemsSource="{Binding Items1}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding="{Binding Code}"        
                                                    Header="Mã số" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Name}"        
                                                    Header="Tổng số tiền gốc" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Description}"
                                                    Header="Kỳ hạn gửi" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Code}"        
                                                    Header="Lãi suất năm" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Name}"        
                                                    Header="Ngày mở" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Description}"
                                                    Header="Chỉnh sửa" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>
                    <GroupBox
                      Header="Bank Name"
                      Style="{DynamicResource MaterialDesignGroupBox}"
                      Margin="16"
                      materialDesign:ColorZoneAssist.Mode="PrimaryDark">
                        <ListView  ItemsSource="{Binding Items1}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding="{Binding Code}"        
                                                    Header="Mã số" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Name}"        
                                                    Header="Tổng số tiền gốc" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Description}"
                                                    Header="Kỳ hạn gửi" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Code}"        
                                                    Header="Lãi suất năm" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Name}"        
                                                    Header="Ngày mở" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Description}"
                                                    Header="Chỉnh sửa" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>
                    <Viewbox                        
                        Height="10">
                    </Viewbox>
                    <GroupBox
                      Header="Đã tất toán"
                      Style="{DynamicResource MaterialDesignGroupBox}"
                      Margin="16"
                      materialDesign:ColorZoneAssist.Mode="PrimaryDark">
                        <ListView  ItemsSource="{Binding Items1}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding="{Binding Code}"        
                                                    Header="Mã số" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Name}"        
                                                    Header="Tổng số tiền gốc" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Description}"
                                                    Header="Kỳ hạn gửi" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Code}"        
                                                    Header="Lãi suất năm" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Name}"        
                                                    Header="Ngày mở" />
                                    <GridViewColumn DisplayMemberBinding="{Binding Description}"
                                                    Header="Xem" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>

                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window>
