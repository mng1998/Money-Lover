<Window
    x:Class="MoneyLover.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    TextElement.FontWeight="Regular"
    TextElement.FontSize="13"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    Background="#E25703"
    Height="650" Width="400"
    ResizeMode="NoResize"
    WindowStyle="None"
    WindowStartupLocation="CenterScreen">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height = "450" />
            <RowDefinition Height = "40" />
            <RowDefinition Height = "80" />
            <RowDefinition Height = "80" />
        </Grid.RowDefinitions>
        <Image Source="./assets/logo.png" Height="170" Width="170" Margin="115,170,115,30" />
        <TextBlock Grid.Row ="1" Text="Lên kế hoạch tài chính thông minh và từng bước tiết kiệm để hiện thực hóa ước mơ." TextElement.Foreground="White" TextElement.FontSize="10" TextAlignment="Center" FontFamily="Arial"/>
        <Button x:Name="btnRegister" Grid.Row ="2" Height="50" Width="370" Content="LẦN ĐẦU SỬ DỤNG MONEY LOVER" Background="White" TextElement.Foreground="DarkGreen" TextElement.FontSize="13" Click="BtnRegister_Click"/>
        <Button x:Name="btnSignIn" Grid.Row ="3" Height="50" Width="370" Content="ĐÃ SỬ DỤNG MONEY LOVER" TextElement.Foreground="White" Background="#E25703" BorderBrush="White" TextElement.FontSize="13" Click="BtnSignIn_Click"/>
    </Grid>
</Window>